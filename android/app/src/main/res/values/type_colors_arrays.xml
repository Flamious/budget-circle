<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Expenses -->
    <array name="expense_colors">
        <item name="expenses_first">@color/red_main</item>
        <item name="expenses_second">@color/red_secondary</item>
    </array>

    <!-- Earnings -->
    <array name="earning_colors">
        <item name="expenses_first">@color/blue_main</item>
        <item name="expenses_second">@color/blue_secondary</item>
    </array>

    <!-- Budget -->
    <array name="budget_colors">
        <item name="budget_first">@color/green_main</item>
        <item name="budget_second">@color/green_secondary</item>
    </array>

    <!-- Dark mode -->
    <array name="dark_colors">
        <item name="dark_first">@color/grey</item>
        <item name="dark_second">@color/grey_2</item>
    </array>

    <!-- History chart-->
    <array name="history_chart_colors">
        <item name="expenses">@color/red_main</item>
        <item name="earnings">@color/blue_main</item>
        <item name="Exchanges">@color/green_main</item>
    </array>

    <!-- History chart dark-->
    <array name="history_chart_colors_dark">
        <item name="expenses">@color/red_secondary</item>
        <item name="earnings">@color/blue_secondary</item>
        <item name="Exchanges">@color/green_secondary</item>
    </array>
</resources>