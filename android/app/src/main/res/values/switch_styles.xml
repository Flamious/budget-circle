<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RedSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/red_switch_main</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red_switch_secondary</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/red_switch_main</item>
    </style>

