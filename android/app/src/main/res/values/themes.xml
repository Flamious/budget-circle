<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetCircle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Disable title bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="orangeEdgeEffect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorEdgeEffect">@color/orange_button</item>
    </style>

    <style name="greenEdgeEffect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorEdgeEffect">@color/green_button</item>
    </style>

    <style name="blueEdgeEffect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorEdgeEffect">@color/blue_button</item>
    </style>

    <style name="redControlCursor" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/red_button</item>
    </style>

    <style name="blueControlCursor" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/blue_button</item>
    </style>

    <style name="greenControlCursor" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/green_button</item>
    </style>

    <style name="redColorDatePicker" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red_switch_main</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/redColorDatePicker.buttons</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/redColorDatePicker.buttons</item>
    </style>

    <style name="greenButtonsDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green_switch_main</item>
    </style>

    <style name="greenButtonsDialog.buttons" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green_switch_main</item>
    </style>

    <style name="orangeButtonsDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange_button</item>
    </style>

    <style name="orangeButtonsDialog.buttons" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange_button</item>
    </style>

    <style name="redColorDatePicker.buttons" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red_switch_main</item>
    </style>

    <style name="blueColorDatePicker" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_switch_main</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/blueColorDatePicker.buttons</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/blueColorDatePicker.buttons</item>
    </style>

    <style name="blueColorDatePicker.buttons" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_switch_main</item>
    </style>
</resources>