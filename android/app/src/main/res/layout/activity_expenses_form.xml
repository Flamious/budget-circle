<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forms.ExpensesFormActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:theme="@style/redEdgeEffect"
        app:layout_constraintBottom_toTopOf="@+id/expAddButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/expCommentaryField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/red_switch_main"
                    android:ems="10"
                    android:hint="@string/comment"
                    android:inputType="textMultiLine"
                    android:textColorHighlight="@color/red_switch_main"
                    android:textColorLink="@color/red_switch_secondary"
                    android:textCursorDrawable="@color/red_switch_main"
                    android:theme="@style/redControlCursor"
                    app:layout_constraintEnd_toEndOf="@+id/expRepSwitch"
                    app:layout_constraintStart_toStartOf="@+id/repTitle"
                    app:layout_constraintTop_toBottomOf="@+id/expRepSwitch" />

                <TextView
                    android:id="@+id/sumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sum"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/expSum"
                    app:layout_constraintStart_toStartOf="@+id/expTitleTitle"
                    app:layout_constraintTop_toTopOf="@+id/expSum" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expKindLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/expSum"
                    app:layout_constraintStart_toStartOf="@+id/sumTitle"
                    app:layout_constraintTop_toBottomOf="@+id/expSum">

                    <TextView
                        android:id="@+id/expSelectKind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_other"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/kindTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/kind"
                        android:textColor="@color/text_secondary"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/expSelectKind"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/expTitleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="@string/title"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/expTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/expTitle" />

                <EditText
                    android:id="@+id/expSum"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/red_switch_main"
                    android:clickable="false"
                    android:ems="10"
                    android:hint="@string/sum"
                    android:inputType="number|numberDecimal"
                    android:textColorHighlight="@color/red_switch_main"
                    android:textColorLink="@color/red_switch_secondary"
                    android:textCursorDrawable="@color/red_switch_main"
                    android:textSize="20sp"
                    android:theme="@style/redControlCursor"
                    app:layout_constraintEnd_toEndOf="@+id/expTitle"
                    app:layout_constraintTop_toBottomOf="@+id/expTitle" />

                <TextView
                    android:id="@+id/repTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_repetitive"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/expRepSwitch"
                    app:layout_constraintStart_toStartOf="@+id/expBudgetTypesLayout"
                    app:layout_constraintTop_toTopOf="@+id/expRepSwitch" />

                <EditText
                    android:id="@+id/expTitle"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:backgroundTint="@color/red_switch_main"
                    android:clickable="false"
                    android:ems="10"
                    android:hint="@string/title"
                    android:inputType="text"
                    android:textColorHighlight="@color/red_switch_main"
                    android:textColorLink="@color/red_switch_secondary"
                    android:textCursorDrawable="@color/red_switch_main"
                    android:textSize="20sp"
                    android:theme="@style/redControlCursor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Switch
                    android:id="@+id/expRepSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:theme="@style/RedSwitch"
                    app:layout_constraintEnd_toEndOf="@+id/expBudgetTypesLayout"
                    app:layout_constraintTop_toBottomOf="@+id/expBudgetTypesLayout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expBudgetTypesLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/expKindLayout"
                    app:layout_constraintStart_toStartOf="@+id/expKindLayout"
                    app:layout_constraintTop_toBottomOf="@+id/expKindLayout">

                    <TextView
                        android:id="@+id/expSelectBudgetType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/budgetTypeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/account"
                        android:textColor="@color/text_secondary"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toStartOf="@+id/expSelectBudgetType"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/expAddButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_button"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/add_exp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/expenseFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/new_expense"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@+id/expenseFormTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/expenseFormTitle"
        app:srcCompat="@drawable/ic_back" />

</androidx.constraintlayout.widget.ConstraintLayout>